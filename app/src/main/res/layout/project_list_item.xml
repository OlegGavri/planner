<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/project_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/project_icon_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/project_24" />

    <TextView
        android:id="@+id/project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/project_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Project title text" />

    <TextView
        android:id="@+id/project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/project_title"
        app:layout_constraintTop_toBottomOf="@id/project_title"
        tools:text="Project description long long long long long  text"/>

    <ProgressBar
        android:id="@+id/project_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/project_description"
        app:layout_constraintTop_toBottomOf="@id/project_description"
        app:layout_constraintEnd_toStartOf="@id/project_progress_text_view"
        tools:progress="50"/>

    <TextView
        android:id="@+id/project_progress_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/project_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/project_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="50%"/>

</androidx.constraintlayout.widget.ConstraintLayout>